        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:text="@string/app_name"
        tools:ignore="Suspicious0dp" />

    <TextView
        android:id="@+id/sarlavha"
